doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.mb-4 Flowers
      // Enlace para a√±adir/editar un objeto
      a.btn.btn-success.mb-3(href="/update-cobj") Add or Edit Pet
      if records.length
        table.table.table-bordered
          thead
            tr
              th Name
              th Number of flowers
              th Flower's Name
          tbody
            each record in records
              tr
                td= record.properties.name
                td= record.properties.number_of_flowers
                td= record.properties.flower_s_name
      else
        p.text-muted No records found.



