doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.mb-4 Create or Update Flowers

      form(action="/update-cobj" method="POST")
        .mb-3
          label.form-label(for="id") Flower Id (keep empty to create a new object)
          input.form-control(type="text", name="id", placeholder="Introduce Id if you want to update an existing one")
        
        .mb-3
          label.form-label(for="name") Name
          input.form-control(type="text", name="name", required)

        .mb-3
          label.form-label(for="number_of_flowers") Number of flowers 
          input.form-control(type="text", name="number_of_flowers")

        .mb-3
          label.form-label(for="flower_s_name") Flower's Name
          input.form-control(type="text", name="flower_s_name")

        button.btn.btn-success(type="submit") Submit

      hr
      a.btn.btn-link(href="/") 



